<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowStressedTestActivity">

    <LinearLayout
        android:id="@+id/layoutHowStressedTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="82sp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="How stressed are you?"
            android:textAlignment="center"
            android:layout_marginBottom="20sp"/>

        <EditText
            android:id="@+id/editPulseRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:hint="Enter your pulse rate"
            android:inputType="number"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/editAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:hint="Enter your age"
            android:inputType="number"
            android:importantForAutofill="no" />

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="15sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="25sp" />

            <RadioButton
                android:id="@+id/buttonMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25sp"
                android:text="Male"/>

            <RadioButton
                android:id="@+id/buttonFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25sp"
                android:text="Female"/>
        </RadioGroup>

        <Button
            android:id="@+id/buttonSubmitStressedTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="25sp"/>

        <Button
            android:id="@+id/buttonMainActivityFromStressed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:text="Dashboard"
            android:textAlignment="center"/>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>